<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <section id="navbar" class="container">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{#link-to 'application' class="navbar-brand"}}{{appName}}{{/link-to}}
    </div>

    <div class="navbar-collapse collapse">

      <ul class="nav navbar-nav">
        {{#each item in menus.main}}
          {{#link-to item tagName="li" href=false}}
            {{#link-to item}}{{capitalize item}}{{/link-to}}
          {{/link-to}}
        {{/each}}
      </ul>

      <ul class="nav navbar-nav pull-right">

        {{#if user.auth}}
        <li class="dropdown">
          <a href="" class="dropdown-toggle" data-toggle="dropdown">Welcome: {{user.name}} <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li>{{#link-to 'sess.signout'}}Signout{{/link-to}}</li>
            <li class="divider"></li>
            <li class="dropdown-header">User actions</li>
            <li><a href="#">Do this</a></li>
            <li><a href="#">Do that</a></li>
          </ul>
        </li>
        {{else}}
        <li class="dropdown">
          <a href="" class="dropdown-toggle" data-toggle="dropdown">Signin/Signup<b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li>{{#link-to 'sess.signin'}}Signin{{/link-to}}</li>
            <li class="divider"></li>
            <li>{{#link-to 'sess.signup'}}Signup{{/link-to}}</li>
            {{!--
            <li class="dropdown-header">Nav header</li>
            <li><a href="#">Separated link</a></li>
            <li><a href="#">One more separated link</a></li>
            --}}
          </ul>
        </li>
        {{/if}}

      </ul>
    </div>

  </section>
</div>

<div id="wrapper">
  {{outlet}}
</div>

<div class="well">
  User object: {{console.userObj}}
  <hr>
  Modernizr: {{console.mdrnObj}}
</div>
